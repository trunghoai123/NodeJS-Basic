  <%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/product.css" />
  </head>

  <body> 
    <%- include('../includes/navigation.ejs')%>
    <main>
      <form class="product-form" action="<% if(editting) { %> /admin/edit-product <% } else { %> /admin/add-product <% } %>" method="POST">
        <div class="form-control">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" value="<% if(editting) { %> <%= product.title %> <% } %>"/>
        </div>
        <div class="form-control">
          <label for="title">Image</label>
          <input type="text" name="imageUrl" id="imageUrl" value="<% if(editting) { %> <%= product.imageUrl %> <% } %>"/>
        </div>
        <div class="form-control">
          <label for="title">Price</label>
          <input type="text" name="price" id="price" value="<% if(editting) { %> <%= product.price %> <% } %>" />
          <!-- <input type="number" step="0.01" name="price" id="price" value="<% if(editting) { %> <%= product.price %> <% } %>" /> -->
        </div> 
        <div class="form-control" >
          <textarea rows="5" name="description" id="description"><% if(editting) { %> <%= product.description %> <% } %></textarea>
        </div>
        <button class="btn" type="submit"><% if(editting) { %> Edit <% } else { %> Add <% } %></button>
        <% if(editting) { %> <input type="hidden" name="productId" value="<%= product.id %>"> <% } %>
      </form>
    </main>
<%- include('../includes/end.ejs')%>

